{% extends 'templates/_document.twig' %}

{% block content %}
  {% for component in post.meta('pageComponents') %}
    {{ renderComponent(component) }}
  {% endfor %}
  <ul class="grid">
    <div class="preContent"><p>Now</p></div>
    {% for post in nowEpisode %}
      <li class="grid-item" onclick="javascript:location.href='{{ post.link }}'">
        <div class="content">
          <div class="episode-header">
            <div class="table-header">
              <p class="table-header-label">Date</p>
              <p class="episode-header-element">{{ post.dateEpisode|date("d.m.Y")|escape('wp_kses_post') }}</p>
            </div>
            <div class="table-header">
              <p class="table-header-label">Show</p>
              <p class="episode-header-element" href="{{ post.showEpisode.url|e }}">{{ post.showEpisode.title|e }}</p>
            </div>
            <div class="table-header">
              <p class="table-header-label">Artist</p>
              <p class="episode-header-element" href="{{ post.artistEpisode.url|e }}">{{ post.artistEpisode.title|e }}</p>
            </div>
            <div class="table-header">
              <p class="table-header-label">Genre</p>
              <ul class="episode-header-element tags">
                {% for tag in post.terms('tag')  %}
                  <li class="tags-item"><a class="tags-itemLink" href="{{ tag.link }}"><span class="visuallyHidden">{{ __("Tag:", "flynt") }}</span> {{ tag }}</a></li>
                {% endfor %}
              </ul>
            </div>
          </div>
          <div class="episode-header-bigger">
            <div class="spacingColumn"></div>
            <p class="h1">{{ post.timeEpisode|date("g:i a")|escape('wp_kses_post') }}</p>
            <div class="spacingColumn"></div>
            <div class="spacingColumn"></div>
          </div>
        </div>
      </li>
    {% endfor %}
    <div class="preContent"><p>Coming Up</p></div>
    {% for post in comingEpisodes %}
      <li class="grid-item" onclick="javascript:location.href='{{ post.link }}'">
        <div class="content">
          <div class="episode-header">
            <div class="table-header">
              <p class="table-header-label">Date</p>
              <p class="episode-header-element">{{ post.dateEpisode|date("d.m.Y")|escape('wp_kses_post') }}</p>
            </div>
            <div class="table-header">
              <p class="table-header-label">Show</p>
              <p class="episode-header-element" href="{{ post.showEpisode.url|e }}">{{ post.showEpisode.title|e }}</p>
            </div>
            <div class="table-header">
              <p class="table-header-label">Artist</p>
              <p class="episode-header-element" href="{{ post.artistEpisode.url|e }}">{{ post.artistEpisode.title|e }}</p>
            </div>
            <div class="table-header">
              <p class="table-header-label">Genre</p>
              <ul class="episode-header-element tags">
                {% for tag in post.terms('tag')  %}
                  <li class="tags-item"><a class="tags-itemLink" href="{{ tag.link }}"><span class="visuallyHidden">{{ __("Tag:", "flynt") }}</span> {{ tag }}</a></li>
                {% endfor %}
              </ul>
            </div>
          </div>
          <div class="episode-header-bigger">
            <div class="spacingColumn"></div>
            <p class="h1">{{ post.timeEpisode|date("g:i a")|escape('wp_kses_post') }}</p>
            <div class="spacingColumn"></div>
            <div class="spacingColumn"></div>
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
