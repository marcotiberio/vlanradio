{% if items|length > 0 %}
  <div class="flyntComponent componentSpacing" is="flynt-block-schedule">
    <div class="container-outer fullWidthContainer-noPaddingnoMargin">
      {% if title %}
      <div class="preContent">
        <h1>{{ title|e }}</h1>
      </div>
      {% endif %}
      <ul class="grid">
        {% for item in items %}
          <li class="grid-item" onclick="javascript:location.href='{{ item.link }}'">
            <div class="content">
              {# <div class="episode-header-labels">
                <p class="episode-header-labels-category">Episode</p>
                <p class="episode-header-labels-artist">Artist</p>
                <p class="episode-header-labels-tags">Genre</p>
              </div> #}
              <div class="episode-header">
                {# <a class="episode-header-element meta-category" href="{{ item.category.link|e('esc_url') }}"><span class="visuallyHidden">{{ __("Category:", "flynt") }}</span> {{ item.category }}</a> #}
                {# <a class="content-title" href="{{ item.link }}" title="{{ item.title }}" aria-hidden="true" tabindex="-1">{{ item.title }} #}
                {# {% if item.thumbnail %}
                <div class="featuredImage">
                  {{ renderComponent('BlockImage', { image: item.thumbnail, noComponentSpacing: true }) }}
                </div>
                {% endif %} #}
                <div class="table-header">
                  <p class="table-header-label">Date</p>
                  <p class="episode-header-element">{{ item.dateEpisode|date("d.m.Y")|escape('wp_kses_post') }}</p>
                </div>
                <div class="table-header">
                  <p class="table-header-label">Show</p>
                  <p class="episode-header-element" href="{{ item.showEpisode.url|e }}">{{ item.showEpisode.title|e }}</p>
                </div>
                <div class="table-header">
                  <p class="table-header-label">Artist</p>
                  <p class="episode-header-element" href="{{ item.artistEpisode.url|e }}">{{ item.artistEpisode.title|e }}</p>
                </div>
                <div class="table-header">
                  <p class="table-header-label">Genre</p>
                  <ul class="episode-header-element tags">
                    {% for tag in item.terms('tag')  %}
                      <li class="tags-item"><a class="tags-itemLink" href="{{ tag.link }}"><span class="visuallyHidden">{{ __("Tag:", "flynt") }}</span> {{ tag }}</a></li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
              <div class="episode-header-bigger">
                <div class="spacingColumn"></div>
                <p class="h1">{{ item.timeEpisode|date("g:i a")|escape('wp_kses_post') }}</p>
                <div class="spacingColumn"></div>
                <div class="spacingColumn"></div>
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
