{% if items|length > 0 %}
  <div class="flyntComponent componentSpacing" is="flynt-block-schedule">
    <div class="container-outer fullWidthContainer-noPaddingnoMargin">
      {% if title %}
      <div class="preContent">
        <h1>{{ title|e }}</h1>
      </div>
      {% endif %}
      <ul class="grid">
        {% for item in items %}
          <li class="grid-item">
            <div class="content">
              <div class="episode-header">
                <div class="table-header">
                  <p class="table-header-label">Date</p>
                  <p class="episode-header-element">{{ item.dateEpisode|date("d.m.Y")|escape('wp_kses_post') }}</p>
                </div>
                <div class="table-header">
                  <p class="table-header-label">Show</p>
                  <a class="episode-header-element" href="{{ item.showEpisode.url|e }}">{{ item.showEpisode.title|e }}</a>
                </div>
                <div class="table-header">
                  <p class="table-header-label">Artist</p>
                  <a class="episode-header-element" href="{{ item.artistEpisode.url|e }}">{{ item.artistEpisode.title|e }}</a>
                </div>
                <div class="table-header">
                  <p class="table-header-label">Genre</p>
                  <ul class="episode-header-element tags">
                    {% for tag in item.terms('tag')  %}
                      <li class="tags-item"><a class="tags-itemLink" href="{{ tag.link }}"><span class="visuallyHidden">{{ __("Tag:", "flynt") }}</span> {{ tag }}</a></li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
              <div class="episode-header-bigger" onclick="javascript:location.href='{{ item.link }}'">
                <div class="spacingColumn"></div>
                <p class="h1">{{ item.timeEpisodeStart|date("g:i a") }}</p>
                <p class="visuallyHidden h1">{{ item.timeEpisodeEnd|date("g:i a") }}</p>
                <div class="spacingColumn"></div>
                <div class="spacingColumn"></div>
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
