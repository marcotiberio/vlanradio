{% if items|length > 0 %}
  <div class="flyntComponent flyntComponent--flynt-block-show-grid componentSpacing" id="filter{{ title|e }}"  is="flynt-block-show-grid">
    {% if title %}
      <div class="preContent">
        <p>{{ title|e }}</p>
      </div>
    {% endif %}
    <ul class="grid">
      {% for item in items %}
        <li class="grid-item" onclick="javascript:location.href='{{ item.link }}'">
          <p class="show-title">{{ item.title }}</p>
          {% if item.thumbnail %}
          <div class="featuredImage">
            {{ renderComponent('BlockImage', { image: item.thumbnail, noComponentSpacing: true }) }}
          </div>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
{% endif %}
