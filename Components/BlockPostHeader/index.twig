<div class="flyntComponent" is="flynt-block-post-header">
  <div class="container fullWidthContainer">
    {% if post.thumbnail %}
      <div class="featuredImage">
        {{ renderComponent('BlockImage', { image: post.thumbnail, noComponentSpacing: true }) }}
      </div>
    {% endif %}
    <div class="content centerMaxWidthContainer">
      <div class="episode-header">
        <a class="episode-header-category meta-category" href="{{ post.category.link|e('esc_url') }}"><span class="visuallyHidden">{{ __("Category:", "flynt") }}</span> {{ post.category }}</a>
        <p class="episode-header-title">{{ post.title }}</p>
      </div>
