<div class="flyntComponent themeLight" is="flynt-navigation-footer-columns">
  <div class="container centerMaxWidthContainer">
    <div class="columns">
      {% if contentHtml %}
        <div class="columns-left">{{ contentHtml|e('wp_kses_post') }}</div>
      {% endif %}
      {% if contentRightsHtml %}
        <div class="columns-center">{{ contentRightsHtml|e('wp_kses_post') }}</div>
      {% endif %}
      {# <div class="logo">
        <img class="logo-image" src="{{ logo.src }}" alt="{{ logo.alt }}">
      </div> #}
      <div class="columns-right social">
        {% if social %}
          <ul class="socialList">
            {% for socials in social %}
              <li class="socialList-item">
                <a class="socialList-link" href="{{ socials.url }}" aria-label="{{ socials.platform.label }}">
                  {{- socials.icon -}}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </div>
</div>
