{% if items|length > 0 %}
  <div class="flyntComponent componentSpacing" id="filter{{ title|e }}" is="flynt-block-artist-select">
    <div class="container-outer fullWidthContainer">
      {% if title %}
      <div class="preContent">
        <p>{{ title|e }}</p>
      </div>
      {% endif %}
      <ul class="grid">
        {% for item in items %}
          <li class="grid-item">
            <a class="noHoverEffect" href="{{ item.link }}" title="{{ item.title }}" aria-hidden="true" tabindex="-1">
              <div class="content">
                <p class="content-title">{{ item.title }}</p>
                <div class="featuredImage">
                <figure class="figure">
                <img class="figure-image lazyload"
                  src="{{ item.thumbnail.src|resize(16) }}"
                  data-srcset="{{function('wp_get_attachment_image_srcset', item.thumbnail.id)}}"
                  data-sizes="auto">
                  </figure>
                </div>
                {# {% if item.thumbnail %}
                  <div class="featuredImage">
                    {{ renderComponent('BlockImage', { image: item.thumbnail, noComponentSpacing: true }) }}
                  </div>
                {% endif %} #}
                {# <div class="content-footer">
                  <span>{{ item.preview.read_more(false) }}</span>
                  <span class="button button--link" >{{ labels.readMore }}</span>
                </div> #}
              </div>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
