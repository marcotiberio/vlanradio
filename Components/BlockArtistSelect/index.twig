{% if items|length > 0 %}
  <div class="flyntComponent componentSpacing {{ options.theme }}" is="flynt-block-artist-select">
    <div class="container fullWidthContainer-noPaddingnoMargin">
      {# {% if titlegroup.title or titlegroup.textColor or titlegroup.backgroundColor %}
        <div class="preContent" style="background-color:{{ titlegroup.backgroundColor|e }}">
          <h2 style="color:{{ titlegroup.textColor|e }}">{{ titlegroup.title|e }}</h2>
        </div>
      {% endif %} #}
      <ul class="grid">
        {% for item in items %}
          <li class="grid-item boxPadding">
            <a class="noHoverEffect" href="{{ item.link }}" title="{{ item.title }}" aria-hidden="true" tabindex="-1">
              <div class="content">
                <h2 class="content-title">{{ item.title }}</h2>
                <div class="content-footer">
                  <span>{{ item.preview.read_more(false) }}</span>
                  <span class="button button--link" >{{ labels.readMore }}</span>
                </div>
              </div>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
